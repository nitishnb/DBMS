CREATE TABLE DEPARTMENT(
DEPTID  VARCHAR2(10),
DEPTNAME  VARCHAR2(20),
PRIMARY KEY(DEPTID)
);

CREATE TABLE STUDENT(
USN          VARCHAR2(10), 
SNAME        VARCHAR2(20),
AGE          NUMBER(2),
CGPA         NUMBER(5,2),
DEPTID       VARCHAR2(10),
PRIMARY KEY(USN),
FOREIGN KEY(DEPTID) REFERENCES DEPARTMENT(DEPTID)
);

INSERT INTO DEPARTMENT VALUES('&DEPTID','&DEPTNAME');

INSERT INTO STUDENT VALUES('&USN','&SNAME','&AGE','&CGPA','&DEPTID');

SELECT * FROM DEPARTMENT;

SELECT * FROM STUDENT;

ALTER TABLE STUDENT RENAME COLUMN CGPA TO SGPA;

ALTER TABLE STUDENT;

DESC STUDENT
